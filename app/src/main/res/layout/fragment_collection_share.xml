<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.waz.zclient.conversation.ShareToMultipleFragment"
        android:background="@null"
        android:clickable="true"
        >

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collections__multi_share__image_preview__height">
        </RelativeLayout>

        <com.waz.zclient.ui.text.TypefaceEditText
            android:id="@+id/multi_share_search_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collections__multi_share_search_height"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/light_graphite_16"
            android:layout_margin="@dimen/wire__padding__8"
            android:drawableStart="@drawable/ic_action_search_light"
            android:paddingLeft="@dimen/wire__padding__4"
            android:paddingRight="@dimen/wire__padding__4"
            android:textSize="@dimen/wire__text_size__regular"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:hint="@string/multi_share_search_hint"
            android:fontFamily="sans-serif-light"
            tools:targetApi="lollipop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/wire__divider__height"
            android:background="@color/light_graphite_16"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv__conversation_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/wire__divider__height"
            android:background="@color/light_graphite_16"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/collections__multi_share_footer_height"
            android:background="@null">

            <com.waz.zclient.ui.views.CursorIconButton
                android:id="@+id/cib__send_button"
                android:layout_width="@dimen/cursor__menu_button__diameter"
                android:layout_height="@dimen/cursor__menu_button__diameter"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="@dimen/cursor__menu_button__padding"
                android:text="@string/glyph__send"
                android:textColor="@color/drawing__icon__text_color"
                />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
